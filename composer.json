{
    "name": "thomas-miceli/router",
    "version": "0.1",
    "description": "PHP router with middlewares & dependency injection",
    "type": "library",
    "authors": [
        {
            "name": "Thomas MICELI",
            "email": "tho.miceli@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "nyholm/psr7": "^1.3",
        "nyholm/psr7-server": "^1.0",
        "php-di/php-di": "^6.3",
        "psr/http-server-middleware": "^1.0",
        "slim/slim": "^4.7",
        "slim/php-view": "^3.1"
    },
    "autoload": {
        "psr-4": {
            "ThomasMiceli\\Router\\": "src"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2"
    }
}
